# Example Terraform variables file
# Copy this to terraform.tfvars and customize as needed

# Your domain name (should match your Cloudflare zone)
cloudflare_zone_name = "kapabeauty.com"

# Your GitHub Pages domain (replace with your GitHub username)
github_pages_domain = "alisade.github.io"

# Enable Cloudflare proxy (orange cloud)
# Set to true for DDoS protection and CDN, but may interfere with GitHub Pages SSL
enable_cloudflare_proxy = false

# Enable IPv6 support
enable_ipv6 = true

# GitHub Pages IP addresses (current as of 2025)
# These rarely change, but can be updated if needed
github_pages_ips = [
  "185.199.108.153",
